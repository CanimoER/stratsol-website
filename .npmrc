# Enforce exact versions for all dependencies
save-exact=true

# Prevent automatic running of scripts
# This improves security by preventing malicious packages from executing code during installation
ignore-scripts=true

# Enable audit checks during installation
audit=true

# Check the minimum TLS version for package downloads
strict-ssl=true

# Disable package-lock.json creation
# This is needed if you want to use npm-shrinkwrap.json instead
# package-lock=false

# Set a higher logLevel for better debugging
loglevel=notice 